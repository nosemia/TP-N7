#include <iostream>
#include <string>
using namespace std;

int main(){
    string p, r="";
    cout << "Palabra: ";
    getline(cin, p);

    for(int i=0; i<p.length(); i++){
        r = r + p[i];
        if(i < p.length()-1){
            r = r + "-";
        }
    }

    cout << r;
    return 0;
}
