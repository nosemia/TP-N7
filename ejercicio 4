#include <iostream>
#include <string>
using namespace std;

int main(){
    string cad, pal;
    cout << "Cadena: ";
    getline(cin, cad);
    cout << "Palabra: ";
    getline(cin, pal);

    if(cad.find(pal) != string::npos){
        cout << "La palabra esta en la cadena.";
    } else {
        cout << "No aparece.";
    }

    return 0;
}
